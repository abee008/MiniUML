<UserControl x:Class="MiniUML.Plugins.Home.Controls.Shapes.UnknownShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Background="White">
        <TextBlock Foreground="Red" Margin="2">
            <Run Text="Error: " FontWeight="Bold"/>
            <Run Text="Unknown shape type!"/>
        </TextBlock>
        <TextBlock Margin="2" Foreground="Gray" FontSize="10" Text="{Binding Name.LocalName}"/>
    </StackPanel>

</UserControl>
