<Application x:Class="MiniUML.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:sw1="clr-namespace:System.Windows;assembly=WindowsBase"
             xmlns:sw2="clr-namespace:System.Windows;assembly=PresentationFramework">

    <Application.Resources>
        
        <ResourceDictionary>
            
            <!-- View resources -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MiniUML.View;component/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Application resources -->
            <s:String x:Key="ApplicationName">MiniUML</s:String>
            <BitmapFrame x:Key="ApplicationIcon">pack://application:,,,/ApplicationIcon.ico</BitmapFrame>
            
        </ResourceDictionary>
        
    </Application.Resources>

</Application>
